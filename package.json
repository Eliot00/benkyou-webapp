{
  "name": "benkyou-webapp",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "oxlint",
    "format": "dprint fmt \"**/*.{js,jsx,ts,tsx}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "dprint": "^0.50.1",
    "lint-staged": "^16.1.4",
    "oxlint": "^1.15.0",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.4",
      "wrangler": "^4.39.0",
      "ts-fsrs": "^5.2.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,astro}": "oxlint",
    "*.{js,jsx,ts,tsx,astro}": "dprint fmt"
  }
}
