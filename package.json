{
  "name": "benkyou-webapp",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "dprint fmt \"**/*.{js,jsx,ts,tsx}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "dprint": "^0.50.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.4",
      "wrangler": "^4.28.0",
      "eslint": "^9.29.0",
      "@antfu/eslint-config": "^4.15.0",
      "ts-fsrs": "^5.2.0"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "dprint fmt"
  }
}
